{
  "name": "casalenaa",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Sistema POS Casalena",
  "author": "Casalena",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron:dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder"
  },
  "build": {
    "appId": "com.casalena.pos",
    "productName": "Casalena POS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/icon.png",
      "artifactName": "CasalenaPOS.exe",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "package.json",
      "node_modules/**/*",
      "public/**/*"
    ]
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/realtime-js": "^2.93.3",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.93.2",
    "jspdf": "^4.1.0",
    "next": "16.1.5",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.5",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}